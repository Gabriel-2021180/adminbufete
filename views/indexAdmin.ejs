</div>
<!--fin del modal pregunta-->

<!--Inicio de modal reuniones-->
<div id="reunionModal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content" style="width: 800px;">
      <div class="modal-header">
        <h2 class="modal-title" style="color: white;" >Crear Reunión</h2>
      </div>
      <div class="modal-body">
        <form style="background-color: #2a2f47;">
          <div class="form-group">
            <label for="asunto" style="color: white;">Asunto de la reunión:</label>
            <input type="text" id="asuntoReunion" name="asunto" class="form-control custom-input" required/>
          </div>
          <div class="form-group">
            <label for="lugar" style="color: white;">Lugar:</label>
            <input type="text" id="lugarReunion" name="lugar" class="form-control custom-input" required/>
          </div>
          <div class="form-group">
            <label for="reunionDate" style="color: white;">Fecha:</label>
            <input type="text" id="reunionDate" name="fecha" class="form-control custom-input" readonly />
          </div>
          <div class="form-group">
            <label for="reunionTime" style="color: white;">Hora Inicio (HH:mm):</label>
            <select id="reunionTimeInicio" name="hora" class="form-control custom-input"style="color: black; height: 60px; width: 150px;" required></select>
          </div>
          <div class="form-group">
            <label for="reunionTimeFin" style="color: white;">Hora Fin (HH:mm):</label>
            <select id="reunionTimeFin" name="horaFin" class="form-control custom-input" style="color: black; height: 60px; width: 150px;" required></select>
          </div>
          <!-- Campo de búsqueda de usuarios -->
          <div class="form-group">
            <label for="searchUser" style="color: white;">Buscar usuario:</label>
            <input type="text" id="searchUser" name="searchUser" class="form-control custom-input" />
          </div>
          <!-- Tabla de resultados de búsqueda -->
          <div class="form-group">
            <table id="searchResults" class="table table" >
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Acción</th>
                </tr>
              </thead>
              <tbody style="width:800px; color: white;">
                <!-- Los resultados de la búsqueda se insertarán aquí -->
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="reunionClose" data-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary" id="save-reunion">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!--fin de modal reuniones-->
