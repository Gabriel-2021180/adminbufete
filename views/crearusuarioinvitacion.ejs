<!DOCTYPE html>
<html>
<head>
    <title>Registro</title>
    <style>
        *,
        *:before,
        *:after {
          padding: 0;
          margin: 0;
          box-sizing: border-box;
        }

        body {
          background-color: #080710;
          
        }

        .background {
          width: 100%;
          max-width: 430px;
          height: 520px;
          position: absolute;
          transform: translate(-50%, -50%);
          left: 50%;
          top: 50%;
        }

        .background .shape {
          height: 200px;
          width: 200px;
          position: absolute;
          border-radius: 50%;
        }

        .shape:last-child {
          background: linear-gradient(to right, #942833, #942833);
          right: -30px;
          bottom: -80px;
        }

        form {
          width: auto;
          background-color: rgba(255, 255, 255, 0.13);
          position: absolute;
          top: 100%;
          left: 50%;
          transform: translate(-50%, -50%);
          border-radius: 10px;
          backdrop-filter: blur(10px);
          border: 2px solid rgba(255, 255, 255, 0.1);
          box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
          padding: 5% 3%;
        }

        form * {
          font-family: 'Poppins', sans-serif;
          color: #ffffff;
          letter-spacing: 0.5px;
          outline: none;
          border: none;
        }

        form h3 {
          font-size: 32px;
          font-weight: 500;
          line-height: 42px;
          text-align: center;
        }

        /* Media queries para hacer el formulario responsive */
        @media (max-width: 768px) {
          form {
            width: 90%;
            max-width: 400px;
            padding: 5% 3%;
          }

          form h3 {
            font-size: 32px;
            line-height: 42px;
          }
        }

        @media (max-width: 480px) {
          form {
            width: 90%;
            max-width: 400px;
            padding: 5% 3%;
          }

          form h3 {
            font-size: 32px;
            line-height: 42px;
          }
        }

        label {
          display: block;
          margin-top: 30px;
          font-size: 16px;
          font-weight: 500;
        }

        input {
          display: block;
          height: 50px;
          width: 100%;
          background-color: rgba(255, 255, 255, 0.07);
          border-radius: 3px;
          padding: 0 10px;
          margin-top: 8px;
          font-size: 14px;
          font-weight: 300;
        }

        ::placeholder {
          color: #e5e5e5;
        }

        button {
          margin-top: 50px;
          width: 100%;
          background-color: #ffffff;
          color: #080710;
          padding: 15px 0;
          font-size: 18px;
          font-weight: 600;
          border-radius: 5px;
          cursor: pointer;
        }

        .container {
          position: relative;
        }

        .logo-container {
          position: absolute;
          top: 20px;
          left: 20px;
          z-index: -1;
        }

        .logo-container img {
          width: 200px;
          height: auto;
        }

        .background-container {
          position: relative;
          background-repeat: no-repeat;
          background-size: cover;
          height: 100vh;
        }

        .social {
          margin-top: 30px;
          display: flex;
        }

        .social div {
          background: red;
          width: 150px;
          border-radius: 3px;
          padding: 5px 10px 10px 5px;
          background-color: rgba(255, 255, 255, 0.27);
          color: #eaf0fb;
          text-align: center;
        }

        .social div:hover {
          background-color: rgba(255, 255, 255, 0.47);
        }

        .social .fb {
          margin-left: 25px;
        }

        .social .go {
          margin-left: 85px;
        }

        .social i {
          margin-right: 4px;
        }

        .float {
          position: fixed;
          width: 60px;
          height: 60px;
          bottom: 40px;
          right: 40px;
          background-color: #942833;
          color: white;
          border-radius: 50px;
          text-align: center;
          transition: background-color 0.3s ease;
          text-decoration: none;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .float:hover {
          background-color: #731f28;
          color: white;
          text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="background-container">
        <div class="logo-container">
          <img src="https://storage.googleapis.com/primerstorage/LogoA-removebg-preview.png" alt="Logo del bufete de abogados">
          <div class="text-container">
            <h1 style="color: white; font-family: 'Poppins',sans-serif;">Azurduy & Asociados</h1>
          </div>
        </div>
      </div>
      <a href="/" class="float" style="font-family: 'Poppins',sans-serif;"><strong>Volver</strong> </a>

      <form action="/signup-with-invitation" method="POST" enctype="multipart/form-data" style="width: 70%;">
        <h1 style="color: #e5e5e5;">Registro</h1>
        <table style="width: 100%;">
          <tr>
            <td>
              <label for="nombres">Nombres:</label>
              <input type="text" id="nombres" name="nombres" pattern="[A-Za-zÁÉÍÓÚáéíóúñÑ\s]+" required title="Ingrese solo letras y espacios" style="width: 100%;">
            </td>
            <td>
              <label for="apellidos">Apellidos:</label>
              <input type="text" id="apellidos" name="apellidos" pattern="[A-Za-zÁÉÍÓÚáéíóúñÑ\s]+" required title="Ingrese solo letras y espacios" style="width: 100%;">
            </td>
          </tr>
          <tr>
            <td>
              <label for="username">Nombre de usuario:</label>
              <input type="text" id="username" name="username" required style="width: 100%;">
            </td>
            <td>
              <label for="direccion">Dirección:</label>
              <input type="text" id="direccion" name="direccion" required style="width: 100%;">
            </td>
          </tr>
          <tr>
            <td>
              <label for="ci">CI:</label>
              <input type="text" id="ci" name="ci" required style="width: 100%;">
            </td>
            
            
          </tr>
          <tr>
            <td>
              <label for="descripcion">Descripción (Los clientes podrán verla en tu perfil):</label>
              <input type="text" id="descripcion" name="descripcion" required style="width: 100%;">
            </td>
            <td>
                <label for="especialidad">Especialidad:</label>
                <select id="especialidad" name="especialidad"  style="width: 100%; color: #080710;">
                    <option style="color: #080710;" value="">Seleccione una especialidad</option>
                    <option style="color: #080710;" value="Derecho Civil">Derecho Civil</option>
                    <option style="color: #080710;" value="Derecho Penal">Derecho Penal</option>
                    <option style="color: #080710;" value="Derecho Laboral">Derecho Laboral</option>
                    <option style="color: #080710;" value="Derecho Administrativo">Derecho Administrativo</option>
                    <option style="color: #080710;" value="Derecho Constitucional">Derecho Constitucional</option>
                </select>
            </td>
        </tr>
          <tr>
            <td>
              <label for="fechanac">Fecha de nacimiento:</label>
              <input type="date" id="fechanac" name="fechanac" max="2005-12-31" required style="width: 100%;" >
            </td>
            <td>
              <label for="email">Correo electrónico:</label>
              <input type="email" id="email" name="email" required style="width: 100%;">
            </td>
          </tr>
          <tr>
            <td>
              <label for="phone">Teléfono:</label>
              <input type="tel" id="phone" name="phone" pattern="[0-9]+" required title="Ingrese solo números" style="width: 100%;">
            </td>
            <td>
              <label for="password">Contraseña:</label>
              <input type="password" id="password" name="password" required style="width: 100%;">
            </td>
          </tr>
          
        
          <tr>
            <td colspan="2">
              <label for="image">Imagen de perfil:</label>
              <input type="file" id="image" accept=".jpg, .jpeg, .png" name="profileimg" style="width: 100%;">
            </td>
          </tr>
        </table>
        <button type="submit" id="registerButton" disabled>Registrarse</button>
      </form>
      
    
      
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
  // Variable para verificar si los campos son únicos
  var isUsernameUnique = false;
  var isCiUnique = false;
  var isPhoneUnique = false;
  var isEmailUnique = false;

  // Función para habilitar o deshabilitar el botón de registro
  function toggleRegisterButton() {
    var registerButton = $('#registerButton');

    // Verificar si todos los campos son únicos
    if (isUsernameUnique && isCiUnique && isPhoneUnique && isEmailUnique) {
      registerButton.prop('disabled', false); // Habilitar el botón de registro
    } else {
      registerButton.prop('disabled', true); // Deshabilitar el botón de registro
    }
  }

  // Validación de campo de nombre de usuario
  $('#username').on('input', function() {
    const username = $(this).val();

    $.get('/check-unique', { field: 'username', value: username }, function(data) {
      if (!data.unique) {
        alert('El nombre de usuario ya está en uso');
        isUsernameUnique = false;
      } else {
        isUsernameUnique = true;
      }

      toggleRegisterButton(); // Actualizar el estado del botón de registro
    });
  });

  // Validación de campo de cédula de identidad
  $('#ci').on('input', function() {
    const ci = $(this).val();

    $.get('/check-unique', { field: 'ci', value: ci }, function(data) {
      if (!data.unique) {
        alert('El número de cédula de identidad ya está en uso');
        isCiUnique = false;
      } else {
        isCiUnique = true;
      }

      toggleRegisterButton(); // Actualizar el estado del botón de registro
    });
  });

  // Validación de campo de teléfono
  $('#phone').on('input', function() {
    const phone = $(this).val();

    $.get('/check-unique', { field: 'phone', value: phone }, function(data) {
      if (!data.unique) {
        alert('El número de teléfono ya está en uso');
        isPhoneUnique = false;
      } else {
        isPhoneUnique = true;
      }

      toggleRegisterButton(); // Actualizar el estado del botón de registro
    });
  });

  // Validación de campo de correo electrónico
  $('#email').on('input', function() {
    const email = $(this).val();

    $.get('/check-unique', { field: 'email', value: email }, function(data) {
      if (!data.unique) {
        alert('El correo electrónico ya está en uso');
        isEmailUnique = false;
      } else {
        isEmailUnique = true;
      }

      toggleRegisterButton(); // Actualizar el estado del botón de registro
    });
  });
});
</script>
</body>
</html>
